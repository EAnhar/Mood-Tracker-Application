<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".whatsHapening">

    <ImageView
        android:id="@+id/moodFace2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-220dp"
        android:padding="120dp"
        android:src="@drawable/good"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/moodTxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/good"
        android:textAllCaps="true"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="What's happening?"
        android:textColor="@color/black"
        android:textSize="28dp" />

    <Button
        android:id="@+id/contBtn2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="630dp"
        android:backgroundTint="#423660"
        android:onClick="insert"
        android:text="continue" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3"
        android:foregroundGravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="250dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleY="1.5"
                    android:scaleX="1.5"
                    android:alpha="0.5"
                    android:layout_marginTop="-40dp"
                    android:onClick="selected"
                    android:tag="work"
                    app:srcCompat="@drawable/work"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_marginTop="-40dp"
                    android:fontFamily="serif"
                    android:textSize="13dp"
                    android:text="work"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"
                android:tag="family"
                app:srcCompat="@drawable/family"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="-40dp"
                android:fontFamily="serif"
                android:textSize="13dp"
                android:text="family"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/workBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"
                android:tag="friends"
                app:srcCompat="@drawable/friends"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="-40dp"
                android:fontFamily="serif"
                android:textSize="13dp"
                android:text="friends"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"

                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="-40dp"
                android:fontFamily="serif"
                android:textSize="13dp"
                android:text="travel"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"
                android:tag="weather"
                app:srcCompat="@drawable/weather"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="-40dp"
                android:fontFamily="serif"
                android:textSize="13dp"
                android:text="weather"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"
                android:tag="studies"
                app:srcCompat="@drawable/studies"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="-40dp"
                android:fontFamily="serif"
                android:textSize="13dp"
                android:text="studies"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"
                android:tag="sport"
                app:srcCompat="@drawable/sport"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="-40dp"
                android:fontFamily="serif"
                android:textSize="13dp"
                android:text="sport"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"
                android:tag="clean"
                app:srcCompat="@drawable/clean"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_marginTop="-40dp"
                android:fontFamily="serif"
                android:textSize="13dp"
                android:text="clean"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:alpha="0.5"
                android:layout_marginTop="-40dp"
                android:onClick="selected"
                android:tag="eat"
                app:srcCompat="@drawable/eat"/>
